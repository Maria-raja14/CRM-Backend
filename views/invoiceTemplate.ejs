

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        margin: 0;
        padding: 0;
        color: #333;
      }
      .invoice-box {
        width: 95%;
        margin: auto;
        padding: 30px;
        background: #fff;
      }
      header {
        border-bottom: 2px solid #000;
        padding-bottom: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
   
  .logo {
    width: 300px;  /* logo size increased from 150px to 200px */
    height: auto;
  }


      .company-info {
        font-size: 12px;
        text-align: right;
        line-height: 1.4;
      }
      .details {
        margin-top: 10px;
        font-size: 12px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
      }
      th {
        background: #f0f0f0;
        font-weight: bold;
      }
      table,
      th,
      td {
        border: 1px solid #ccc;
      }
      th,
      td {
        padding: 8px;
        text-align: left;
      }
      .right {
        text-align: right;
      }
      .totals {
        margin-top: 15px;
        text-align: right;
        font-size: 12px;
      }
      .totals p {
        margin: 3px 0;
      }
      .footer {
        border-top: 1px solid #ccc;
        font-size: 10px;
        text-align: center;
        margin-top: 25px;
        padding-top: 5px;
        color: gray;
      }
    </style>
  </head>
  <body>
    <div class="invoice-box">
      <!-- Header -->
      <header>
        <div>
          <img src="/images/TZI_Logo-04_-_Copy-removebg-preview.png" alt="TZI Logo" class="logo" />

        </div>
        <div class="company-info">
          <strong>TechZarInfo Software Solutions Pvt Ltd</strong><br />
          No.2D, M.S Tower, 4th Floor, Convent Rd, Cantonment,<br />
          Tiruchirappalli, Tamil Nadu 620001<br />
          Email: accounts@techzarinfo.com<br />
          Phone: +91 9791343199<br />
          GSTIN: 33AAJCT1568Q1ZP<br />
          PAN: AAJCT1568Q
        </div>
      </header>

      <!-- Invoice Info -->
      <div class="details">
        <p><strong>Invoice Date:</strong> <%= new Date(invoice.createdAt).toLocaleDateString() %></p>
        <p><strong>Invoice Number:</strong> <%= invoice.invoicenumber %></p>
        <p><strong>Client:</strong> <%= invoice.assignTo ? invoice.assignTo.firstName + ' ' + invoice.assignTo.lastName : '' %></p>
      </div>

      <!-- Table -->
      <table>
        <thead>
          <tr>
            <th>Project Description</th>
            <th>HSN/SAC Code</th>
            <th>Total Effort (Days)</th>
            <th class="right">Amount (USD)</th>
          </tr>
        </thead>
        <tbody>
          <% invoice.items.forEach(item => { %>
          <tr>
            <td><%= item.deal?.dealName || '' %></td>
            <td>998314</td>
            <td>30</td>
            <td class="right"><%= Number(item.amount).toFixed(2) %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Totals -->
      <div class="totals">
        <p><strong>Total Cost:</strong> USD <%= invoice.total %></p>
        <p><strong>Amount Received:</strong> USD 0.00</p>
        <p><strong>Balance Amount:</strong> USD <%= invoice.total %></p>
      </div>

      <!-- Footer -->
      <div class="footer">
        Terms & Conditions: Payment due within 30 days.<br />
        Â© TechZarInfo Software Solutions Pvt Ltd
      </div>
    </div>
  </body>
</html>
